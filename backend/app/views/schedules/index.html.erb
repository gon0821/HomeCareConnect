<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-3"><%= @date.strftime("%-m/%-d") %>のスケジュール</h2>

      <div class="schedule-week">
        <%= link_to "#{(@date-3).strftime("%-d")} (#{japanese_weekday(@date-3)})", patient_schedules_path(@patient, date: @date - 3.day), class: "btn date-button" %>
        <%= link_to "#{(@date-2).strftime("%-d")} (#{japanese_weekday(@date-2)})", patient_schedules_path(@patient, date: @date - 2.day), class: "btn date-button" %>
        <%= link_to "#{(@date-1).strftime("%-d")} (#{japanese_weekday(@date-1)})", patient_schedules_path(@patient, date: @date - 1.day), class: "btn date-button" %>
        <%= link_to "#{@date.strftime("%-d")} (#{japanese_weekday(@date)})", patient_schedules_path(@patient, date: @date.day), class: "btn date-button" %>
        <%= link_to "#{(@date+1).strftime("%-d")} (#{japanese_weekday(@date+1)})", patient_schedules_path(@patient, date: @date + 1.day), class: "btn date-button" %>
        <%= link_to "#{(@date+2).strftime("%-d")} (#{japanese_weekday(@date+2)})", patient_schedules_path(@patient, date: @date + 2.day), class: "btn date-button" %>
        <%= link_to "#{(@date+3).strftime("%-d")} (#{japanese_weekday(@date+3)})", patient_schedules_path(@patient, date: @date + 3.day), class: "btn date-button" %>
      </div>

      <div class="schedule-cards">
        <% @schedules.each do |schedule| %>
          <div class="card <%= 'card-confirmed' if schedule.confirmation %> ">
            <div class="card-body d-flex align-items-center">
              <button class="confirm-button <%= 'confirmed' if schedule.confirmation %>" data-schedule-id="<%= schedule.id %>" data-url="<%= update_confirmation_patient_schedules_path(@patient) %>" >
                ✓
              </button>
              <div class="schedule-details">
                <div class="time"><%= schedule.medication.send("time#{schedule.time_slot}").strftime('%H:%M') %></div>
                <div class="name"><%= schedule.medication.name %></div>
                <div class="dosage"><%= schedule.medication.dosage %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
