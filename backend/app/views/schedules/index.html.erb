<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center mb-3"><%= @date.strftime("%-m月%-d日") %>のスケジュール</h2>

      <div class="d-flex justify-content-between mb-3">
        <%= link_to '前の日', patient_schedules_path(@patient, date: @date - 1.day), class: "btn btn-info me-2" %>
        <%= link_to '次の日', patient_schedules_path(@patient, date: @date + 1.day), class: "btn btn-info" %>
      </div>

      <%= hidden_field_tag :date, @date %>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <th>時間</th>
              <th>薬</th>
              <th>服用量</th>
              <th>確認</th>
            </tr>
          </thead>
          <tbody>
            <% @schedules.each do |schedule| %>
              <tr>
                <td><%= schedule.medication.send("time#{schedule.time_slot}").strftime('%H:%M') %></td>
                <td><%= schedule.medication.name %></td>
                <td><%= schedule.medication.dosage %></td>
                <td><%= check_box_tag "schedules[]", schedule.id, schedule.confirmation, data: { url: update_confirmation_patient_schedules_path(@patient) } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
