<div class="message mb-2 <%= 'my-message' if message.user == current_user %>" >
  <div class="card">
    <div class="card-body">
      <p class="card-text">
        <strong><%= message.user.name %>:</strong> <%= message.content %>
        <small class="text-muted"><%= message.created_at.strftime("%m/%d %H:%M") %></small>
      </p>
    </div>
  </div>
</div>
