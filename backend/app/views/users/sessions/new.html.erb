<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-6">
    <h3 class="text-center mb-3">ログイン</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="mb-3">
        <%= f.label :login_id, class: "form-label" %><br />
        <%= f.text_field :login_id, autofocus: true, autocomplete: "username", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.label :password, class: "form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
      </div>

      <div class="mb-4">
        <%= f.submit "ログイン", class: "btn w-100 main-link" %>
      </div>
    <% end %>

    <hr>
    <%= link_to "新規登録はこちら", new_user_registration_path, class: "btn w-100 another-link" %>
    </div>
  </div>
</div>
