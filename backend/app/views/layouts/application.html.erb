<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
      <div class="container">
        <div class="row align-items-center">
          <div class="col">
            <h2>HomeCareConnect</h2>
          </div>
          <% if user_signed_in? %>
            <div class="col text-end">
              <div class="user-menu">
                <div class="user-icon" id="userIcon"></div>
                <div class="user-dropdown" id="userDropdown">
                  <ul>
                    <li class="user-name"><%= current_user.name %>（<%= role_in_japanese(current_user.role) %>）</li>
                    <li><%= link_to raw('<i class="fa-solid fa-gear" style="color: #878787;"></i>  設定'), edit_user_registration_path %></li>
                    <li class="divider"></li>
                    <li><%= link_to raw('<i class="fa-regular fa-address-book" style="color: #787878;"></i> プロフィール・患者ID'), home_show_path %></li>
                    <li><%= link_to raw('<i class="fa-solid fa-desktop" style="color: #999999;"></i>  アップデート予定') %></li>
                    <li class="divider"></li>
                    <li class="logout-button"><%= link_to raw('<i class="fa-solid fa-right-to-bracket" style="color: #4d4d4d;"></i> ログアウト'), destroy_user_session_path, method: :delete %></li>
                  </ul>
                </div>
              </div>
            </div>
          <% else %>
            <div class="col text-end">
              <a href="<%= new_user_session_path %>" class="btn login-button">ログイン</a>
              <a href="<%= new_user_registration_path %>" class="btn assign-button">無料で開始する</a>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- deviseのflashメッセージを表示する -->
    <%= render 'layouts/flash_messages' %>

    <div class="container-fluid">
      <div class="row">
        <div class="col-2 bg-lightblue">
          <!-- ここにサイドメニューを配置 -->
          <% if user_signed_in? %>
            <!-- ログイン後のメニュー -->
            <div class="list-group mt-5">
              <a href="<%= rooms_show_path %>" class="list-group-item list-group-item-action">チャットルーム</a>
              <a href="<%= patient_schedules_path(current_patient) %>" class="list-group-item list-group-item-action mt-3">服用スケジュール</a>
              <a href="<%=  patient_medications_path(current_patient) %>" class="list-group-item list-group-item-action mt-3">お薬リスト</a>
            </div>
          <% else %>
            <!-- ログイン前のメニュー -->
          <% end %>
        </div>

        <div class="col-10">
          <!-- ここに各ビューが表示される -->
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
