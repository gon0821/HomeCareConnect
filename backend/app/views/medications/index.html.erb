<h1>お薬リスト</h1>

<%= link_to 'お薬追加', new_medication_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Dosage</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Memo</th>
    </tr>
  </thead>

  <tbody>
    <% @medications.each do |medication| %>
      <tr>
        <td><%= medication.name %></td>
        <td><%= medication.dosage %></td>
        <td><%= medication.start_date %></td>
        <td><%= medication.end_date %></td>
        <td><%= medication.memo %></td>
        <td><%= link_to '編集', edit_medication_path(medication) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
