  <div class="chat-box">
        <div class="card-body">
          <div id ='messages' data-secret-id='<%= current_user.secret_patient_id %>' data-current-user-id='<%= current_user.id %>' >
            <%= render @messages %>
          </div>
        </div>
        <div class="card fixed-form">
          <form id="new_message">
            <div class="form-group d-flex">
              <textarea id="message_content" data-behavior="room_speaker" class="form-control flex-grow-1 custom-form-input" rows="1" placeholder="ここにメッセージを入力 ➢"></textarea>
              <button type="submit" class="submit-button">
                <i class="fa-regular fa-paper-plane fa-lg" style="color: #fafcff;"></i>
              </button>
            </div>
          </form>
        </div>
  </div>
